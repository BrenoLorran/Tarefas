@model Tarefas.Web.Models.TarefaViewModel

<form asp-action="Criar">  

    <h1 class="text-success text-center">
        Cadastro de Tarefas
    </h1>  

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Titulo">@Html.DisplayNameFor(model => model.Titulo)<h11>*</h11></label>               
        <input asp-for="Titulo" class="form-control" type="text" placeholder="Titulo da tarefa"> </input>                
        <span asp-validation-for="Titulo" class="text-danger"></span>
     </div>

     <div class="form-group">
        <label asp-for="Descricao">@Html.DisplayNameFor(model => model.Descricao)<h11>*</h11></label>                
        <input asp-for="Descricao" class="form-control" type="text" placeholder="Descrição da tarefa"></input>           
        <span asp-validation-for="Descricao" class="text-danger"></span>
     </div>

     <div class="form-group">
         <label asp-for="Status">@Html.DisplayNameFor(model => model.Status)<h11>*</h11></label>           
         <input asp-for="Status" class="form-control" type="text" placeholder="Status da tarefa"></input>           
         <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <input type="submit" class="btn bg-success" value="Enviar" />

</form>



