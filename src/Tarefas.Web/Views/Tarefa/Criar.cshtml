@model Tarefas.Web.Models.TarefaViewModel

<form asp-action="Criar">
    <div class="form-group">
        <label asp-for="Titulo">@Html.DisplayNameFor(model => model.Titulo)</label>
        <input asp-for = "Titulo" class="form-control" type="text"></input>
    </div>
    <div class="form-group">
         <label asp-for="Descricao">@Html.DisplayNameFor(model => model.Descricao)</label>
         <input asp-for = "Descricao" class="form-control" type="text"></input>
    </div>
    <div class="form-group">
        <label asp-for="Status">@Html.DisplayNameFor(model => model.Status)</label>
        <input asp-for = "Status" class="form-control" type="text"></input>
    </div>
    <input type="submit" class="btn btn-primary" value="Enviar" />
</form>

